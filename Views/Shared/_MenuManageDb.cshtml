@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService;

@{
    var rs = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}

@if (rs.Succeeded)
{
    <div class="dropdown">
        <a class="btn btn-outline-danger dropdown-toggle" href="#" id="managerDbDropdown" data-bs-toggle="dropdown">
            Manage
        </a>
        <div class="dropdown-menu dropdown-menu-right dropdown-menu-end" aria-labelledby="managerDbDropdown">
            <a class="dropdown-item" asp-action="Index" asp-controller="DbManage" asp-area="Database">Database</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Contacts" asp-area="Contact">Quản lý hiện hệ</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">Quản lý role</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Identity">Quản lý user</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Category" asp-area="Blog">Quản lý blog</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Post" asp-area="Blog">Quản lý post</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Product" asp-area="ProductManage">Quản lý sản phẩm</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="CategoryProduct" asp-area="ProductManage">Quản lý Category sản phẩm</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Admin" asp-area="" >DashBoard</a>
        </div>
    </div>
}
