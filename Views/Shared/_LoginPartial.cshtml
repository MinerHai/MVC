@using Microsoft.AspNetCore.Identity
@using App.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="d-flex align-items-center">
        <a class="nav-link gray-smal-text p-0 me-2" asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">Xin chào
            @UserManager.GetUserName(User)!</a>
        <button type="submit" class="btn btn-link nav-link gray-smal-text p-0">Đăng xuất</button>
    </form>
}
else
{
    <a class="nav-link gray-smal-text p-0" asp-area="Identity" asp-controller="Account" asp-action="Register">Sign Up</a>
    <span class="gray-smal-text ps-1 pe-1">/</span>
    <a class="nav-link gray-smal-text p-0" asp-area="Identity" asp-controller="Account" asp-action="Login">Sign In</a>
}