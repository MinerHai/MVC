@model AccountProfileModel
<h1> Account Profile </h1>
<form asp-action="EditProfileAsync" asp-controller="Manage" asp-area="Identity" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Gmail" class="form-label"></label>
        <input asp-for="Gmail" class="form-control" />
        <span asp-validation-for="Gmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>
