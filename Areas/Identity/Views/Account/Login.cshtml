@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
}


<link>
<link rel="stylesheet" href="~/css/register.css" />
</link>
<script src="~/js/form.js"></script>
<div class="d-flex align-items-center justify-content-center mt-2">

    <section class="box-shadow-custom p-4 w-50">
        <h1 class="text-center title-dark-large mb-3">@ViewData["Title"]</h1>

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
            class="form-horizontal gap-2 justify-content-center" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 input-shadowbox">
                <input asp-for="UserNameOrEmail" class="form-control" placeholder="Email" />
                <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
            </div>

            <div class="mb-3 position-relative input-shadowbox">
                <div class="input-group ">
                    <input asp-for="Password" type="password" class="form-control pe-5" id="passwordInput"
                        placeholder="Password">
                    <span class="position-absolute end-0 top-50 translate-middle-y me-3" style="cursor: pointer;"> <i
                            class="fa-solid fa-eye-slash" id="togglePassword"></i>
                    </span>
                </div>

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 gray-medium-text">
                <label asp-for="RememberMe" class="ps-0">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <div class="mb-3 ">
                <button type="submit" id="submitBtn" class="btn btn-boxshadow w-100">Login</button>
            </div>
            <div class="d-flex text-center  justify-content-center">
                <p class="gray-medium-text">Dont have account?</p>
                <a class="nav-link p-0 m-0" style="color:black;font-weight: 700;" asp-area="Identity"
                    asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </form>
    </section>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
